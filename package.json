    "nunjucks": "^3.2.3",
    "sass": "^1.55.0",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.0.3",
    "@types/js-beautify": "^1.13.3",
    "@types/node": "^18.7.16",
